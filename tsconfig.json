{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist/",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
            "@/core/*": ["./core/*"],
            "@/model": ["./model"],
            "@/model/*": ["./model/*"],
            "@/storage/*": ["./storage/*"],
            "@/storage/drizzle": ["./storage/drizzle"],
            "@/storage/drizzle/*": ["./storage/drizzle/*"]
        }
    },
    "include": ["src/**/*"]
}
